{
    "name": "open-cml-extension",
    "displayName": "OpenCML-Ext",
    "description": "OpenCML Extension for VSCode",
    "version": "0.4.0",
    "publisher": "Kogler7",
    "icon": "assets/icon.jpg",
    "type": "module",
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "pub": "node ./publish.js"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Kogler7/OpenCML-Ext.git"
    },
    "activationEvents": [],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Camel configuration",
            "properties": {
                "opencmlLanguageServer.camelPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "camel",
                    "description": "Path to the Camel executable."
                },
                "opencmlLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "opencmlLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "camel.run",
                    "when": "editorLangId == cml",
                    "group": "navigation"
                }
            ],
            "webview/context": [
                {
                    "command": "camel.vizGIR",
                    "when": "webviewId == 'camel'"
                },
                {
                    "command": "camel.run",
                    "when": "webviewId == 'camel' && webviewSection == 'editor'"
                }
            ]
        },
        "commands": [
            {
                "command": "camel.vizGIR",
                "title": "Visualize GraphIR",
                "category": "Camel"
            },
            {
                "command": "camel.run",
                "title": "Run Camel"
            },
            {
                "command": "camel.format",
                "title": "Format Camel Code"
            }
        ],
        "languages": [
            {
                "id": "cml",
                "aliases": [
                    "OpenCML",
                    "cml"
                ],
                "extensions": [
                    ".cml"
                ],
                "icon": {
                    "light": "./assets/logo.svg",
                    "dark": "./assets/logo.svg"
                },
                "configuration": "./language-configuration.json"
            },
            {
                "id": "psl",
                "aliases": [
                    "Photonic Simulation Language",
                    "psl"
                ],
                "extensions": [
                    ".psl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cml",
                "scopeName": "source.cml",
                "path": "./syntaxes/cml.tmLanguage.json"
            },
            {
                "language": "psl",
                "scopeName": "source.psl",
                "path": "./syntaxes/psl.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@vscode/vsce": "^2.31.1",
        "typescript": "^5.4.5"
    }
}
